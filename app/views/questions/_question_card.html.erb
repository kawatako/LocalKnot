<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title"><%= link_to question.title, question_path(question) %></h2>
    <p class="text-sm">
    投稿者: <%= link_to question.user.try(:profile).try(:user_name) || '名無しさん', profile_path(question.user) %>
      <span class="mx-1">|</span>
      投稿日時: <%= l question.created_at, format: :short %>
      <% if question.spot.present? %>
        <span class="mx-1">|</span>
        スポット: <%= question.spot.name %>
      <% end %>
      <% if question.category.present? %>
        <span class="mx-1">|</span>
        カテゴリ: <%= question.category.name %>
      <% end %>
    </p>
    <div class="card-actions justify-end">
      <%= link_to "詳細を見る", question_path(question), class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>