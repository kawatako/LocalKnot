<%# app/views/devise/sessions/new.html.erb %>
<div class="min-h-screen flex items-center justify-center bg-base-200">
  <div class="card w-full max-w-md bg-base-100 shadow-xl"> <%# 変更: w-96 を w-full max-w-md に変更 %>
    <div class="card-body">
      <h2 class="card-title text-center">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-control">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
        </div>

        <div class="form-control">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-control">
            <label class="cursor-pointer label">
              <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
              <span class="label-text">ログイン状態を保持する</span>
            </label>
          </div>
        <% end %>

        <div class="card-actions justify-center mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>