<%= form_with(model: [question, answer], local: true) do |form| %>
  <div class="form-control">
    <%= form.label :body, "回答内容", class: "label" %>
    <%= form.text_area :body, class: "textarea textarea-bordered" %>
  </div>

  <div class="mt-4">
    <%= form.submit "回答を投稿", class: "btn btn-primary" %>
  </div>
<% end %>